<Window x:Class="BettingSystemApp.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить событие" Height="300" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#E0FFF7">
    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="Название события:" Foreground="#6A0DAD" Margin="0,0,0,5"/>
            <TextBox x:Name="EventNameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Дата события:" Foreground="#6A0DAD" Margin="0,0,0,5"/>
            <DatePicker x:Name="EventDatePicker" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Создать" Width="120" Margin="5" Background="#98FF98" Click="SaveButton_Click"/>
                <Button Content="Назад" Width="80" Margin="5" Background="#D8BFD8" Click="BackButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
