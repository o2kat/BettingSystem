<Window x:Class="BettingSystemApp.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAKMERIC | Панель редактора" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF">

    <Border BorderBrush="#E0FFF7" BorderThickness="1" CornerRadius="8" Margin="10">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Управление ставками" 
                       Foreground="#6A0DAD"
                       FontSize="18"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Список ставок -->
            <ListView x:Name="BetsListView" 
                      Grid.Row="1"
                      Margin="0,0,0,15"
                      BorderBrush="#B5EAD7"
                      BorderThickness="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding BetID}" Width="50">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#6A0DAD" FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Матч" DisplayMemberBinding="{Binding Match}" Width="200">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#6A0DAD" FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Время" DisplayMemberBinding="{Binding MatchTime, StringFormat={}{0:dd.MM.yyyy HH:mm}}" Width="120">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#6A0DAD" FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Спорт" DisplayMemberBinding="{Binding Sport}" Width="100">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#6A0DAD" FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="150">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#6A0DAD" FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="К1" DisplayMemberBinding="{Binding Team1Win}" Width="60">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#6A0DAD" FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="К2" DisplayMemberBinding="{Binding Team2Win}" Width="60">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#6A0DAD" FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="КX" DisplayMemberBinding="{Binding Draw}" Width="60">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="#6A0DAD" FontWeight="SemiBold"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Padding" Value="8,4"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <!-- Основные кнопки управления -->
            <UniformGrid Grid.Row="2" 
                         Rows="1" 
                         Columns="4" 
                         HorizontalAlignment="Center"
                         Margin="0,0,0,15">
                <Button Content="Добавить" 
                        Margin="5"
                        Background="#B5EAD7"
                        Foreground="#333"
                        BorderThickness="0"
                        Padding="8,4"
                        FontWeight="Medium"
                        Click="AddBetButton_Click"/>

                <Button Content="Редактировать" 
                        Margin="5"
                        Background="#ADD0B3"
                        Foreground="#333"
                        BorderThickness="0"
                        Padding="8,4"
                        FontWeight="Medium"
                        Click="EditBetButton_Click"/>

                <Button Content="Удалить" 
                        Margin="5"
                        Background="#CBC3E3"
                        Foreground="#333"
                        BorderThickness="0"
                        Padding="8,4"
                        FontWeight="Medium"
                        Click="DeleteBetButton_Click"/>

                <Button Content="Очистить прошедшие" 
                        Margin="5"
                        Background="#CBC3E7"
                        Foreground="#333"
                        BorderThickness="0"
                        Padding="8,4"
                        FontWeight="Medium"
                        Click="ClearPastBets_Click"/>
            </UniformGrid>

            <!-- Кнопка назад -->
            <Button Grid.Row="3"
                    Content="Назад" 
                    Width="100" 
                    Margin="5"
                    HorizontalAlignment="Center"
                    Background="#CBC5E3"
                    Foreground="#333"
                    BorderThickness="0"
                    Padding="8,4"
                    FontWeight="Medium"
                    Click="BackButton_Click"/>
        </Grid>
    </Border>
</Window>