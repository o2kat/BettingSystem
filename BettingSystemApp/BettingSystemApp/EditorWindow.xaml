<Window x:Class="BettingSystemApp.EditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно редактора" Height="480" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#E0FFF7">
    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="События" FontSize="16" FontWeight="Bold" Foreground="#6A0DAD" Margin="0,0,0,10"/>
            <ListView x:Name="EventsListView" Height="280" Margin="0,0,0,10">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Название" DisplayMemberBinding="{Binding EventName}" Width="300"/>
                        <GridViewColumn Header="Дата" DisplayMemberBinding="{Binding EventDate}" Width="200"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Добавить" Width="100" Margin="5" Background="#98FF98" Click="AddEventButton_Click"/>
                <Button Content="Редактировать" Width="120" Margin="5" Background="#D8BFD8" Click="EditEventButton_Click"/>
                <Button Content="Удалить" Width="100" Margin="5" Background="#FFCCCC" Click="DeleteEventButton_Click"/>
                <Button Content="Очистить прошедшие" Width="160" Margin="5" Background="#AADDDD" Click="ClearPastEvents_Click"/>
            </WrapPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Назад" Width="100" Margin="5" Background="#FFDDEE" Click="BackButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
