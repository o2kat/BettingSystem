<Window x:Class="BettingSystemApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAKMERIC | Главное меню"
        Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF">

    <Border BorderBrush="#E0FFF7" BorderThickness="1" CornerRadius="8" Margin="20">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">
                <!-- Логотип и название -->
                <TextBlock Text="MAKMERIC"
                           Foreground="#6A0DAD"
                           FontSize="24"
                           FontWeight="Bold"
                           Margin="0,0,0,30"
                           HorizontalAlignment="Center"/>

                <!-- Вертикальная линия-разделитель -->
                <Border Height="1" Background="#B5EAD7" Margin="0,0,0,30"/>

                <!-- Основные кнопки -->
                <Button Content="Войти"
                        Width="220"
                        Height="40"
                        Margin="0,10"
                        Background="#B5EAD7"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Medium"
                        Click="LoginButton_Click"/>

                <Button Content="Зарегистрироваться"
                        Width="220"
                        Height="40"
                        Margin="0,10"
                        Background="#CBC3E3"
                        Foreground="#333"
                        BorderThickness="0"
                        FontSize="14"
                        FontWeight="Medium"
                        Click="RegisterButton_Click"/>

                <!-- Вертикальная линия-разделитель -->
                <Border Height="1" Background="#B5EAD7" Margin="0,30,0,0"/>

                <!-- Информация о версии -->
                <TextBlock Text="v1.0.0"
                           Foreground="#AAAAAA"
                           FontSize="10"
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>