<Window x:Class="BettingSystemApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное окно" Height="350" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="#E0FFF7">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock x:Name="RoleLabel"
                       Text="MAKMERIC"
                       FontSize="16"
                       FontWeight="Bold"
                       Foreground="#6A0DAD"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center" />

            <Button Content="Войти" Width="200" Margin="0,5" Background="#98FF98" Click="LoginButton_Click"/>
            <Button Content="Зарегистрироваться" Width="200" Margin="0,5" Background="#D8BFD8" Click="RegisterButton_Click"/>


        </StackPanel>
    </Grid>
</Window>
