<Window x:Class="BettingSystemApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно администратора" Height="505" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#E0FFF7">
    <Grid Margin="10">
        <StackPanel>

            <TextBlock Text="Пользователи:" FontSize="16" FontWeight="Bold" Foreground="#6A0DAD" Margin="0,0,0,10"/>
            <DataGrid x:Name="UsersDataGrid" Height="280" AutoGenerateColumns="True"
                      CanUserAddRows="False" IsReadOnly="True" 
                      AlternatingRowBackground="#F8F8FF"
                      GridLinesVisibility="Horizontal"
                      Margin="0,0,0,10"/>

            <TextBlock Text="Действия:" FontSize="16" FontWeight="Bold" Foreground="#6A0DAD" Margin="0,10,0,5"/>
            <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Архивировать пользователей" Width="160" Margin="5" Background="#98FF98" Click="ArchiveUsersButton_Click"/>
                <Button Content="Разархивировать пользователей" Width="170" Margin="5" Background="#D8BFD8" Click="UnarchiveUsersButton_Click"/>
            </WrapPanel>
            <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,10">
                <Button Content="Архивировать события" Width="160" Margin="5" Background="#98FF98" Click="ArchiveEventsButton_Click"/>
                <Button Content="Разархивировать события" Width="170" Margin="5" Background="#D8BFD8" Click="UnarchiveEventsButton_Click"/>
            </WrapPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Назад" Width="100" Margin="5" Background="#FFDDEE" Click="BackButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
