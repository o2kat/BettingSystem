<Window x:Class="BettingSystemApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAKMERIC | Администратор" 
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF">

    <Border BorderBrush="#E0FFF7" BorderThickness="1" CornerRadius="8" Margin="10">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Панель администратора" 
                       Foreground="#6A0DAD"
                       FontSize="18"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Пользователи:" 
                               Foreground="#6A0DAD"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <DataGrid x:Name="UsersDataGrid" 
                              Height="150" 
                              AutoGenerateColumns="True"
                              CanUserAddRows="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              BorderBrush="#B5EAD7"
                              BorderThickness="1"
                              AlternatingRowBackground="#F5F5FF"
                              GridLinesVisibility="Horizontal"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Ставки (коэффициенты):" 
                               Foreground="#6A0DAD"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <DataGrid x:Name="BetsDataGrid" 
                              Height="150" 
                              AutoGenerateColumns="True"
                              CanUserAddRows="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              BorderBrush="#B5EAD7"
                              BorderThickness="1"
                              AlternatingRowBackground="#F5F5FF"
                              GridLinesVisibility="Horizontal"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Ставки пользователей:" 
                               Foreground="#6A0DAD"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <DataGrid x:Name="UserBetsDataGrid" 
                              Height="150" 
                              AutoGenerateColumns="True"
                              CanUserAddRows="False" 
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              BorderBrush="#B5EAD7"
                              BorderThickness="1"
                              AlternatingRowBackground="#F5F5FF"
                              GridLinesVisibility="Horizontal"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Действия:" 
                               Foreground="#6A0DAD"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <UniformGrid Rows="3" Columns="2" HorizontalAlignment="Center" Margin="0,10">
                        <Button Content="Архивировать пользователей" 
                                Width="180"
                                Margin="5"
                                Background="#B5EAD7"
                                Foreground="#333"
                                BorderThickness="0"
                                Padding="8,4"
                                FontWeight="Medium"
                                Click="ArchiveUsersButton_Click"/>

                        <Button Content="Разархивировать пользователей" 
                                Width="180"
                                Margin="5"
                                Background="#6A0D"
                                Foreground="#333"
                                BorderThickness="0"
                                Padding="8,4"
                                FontWeight="Medium"
                                Click="UnarchiveUsersButton_Click"/>

                        <Button Content="Архивировать ставки" 
                                Width="180"
                                Margin="5"
                                Background="#B5EAD7"
                                Foreground="#333"
                                BorderThickness="0"
                                Padding="8,4"
                                FontWeight="Medium"
                                Click="ArchiveBetsButton_Click"/>

                        <Button Content="Разархивировать ставки" 
                                Width="180"
                                Margin="5"
                                Background="#CBC3E3"
                                Foreground="#333"
                                BorderThickness="0"
                                Padding="8,4"
                                FontWeight="Medium"
                                Click="UnarchiveBetsButton_Click"/>

                        <Button Content="Архивировать ставки пользователей" 
                                Width="180"
                                Margin="5"
                                Background="#B5EAD7"
                                Foreground="#333"
                                BorderThickness="0"
                                Padding="8,4"
                                FontWeight="Medium"
                                Click="ArchiveUserBetsButton_Click"/>
                    </UniformGrid>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="0,15,0,0">
                <Button Content="Назад" 
                        Width="100" 
                        Margin="5" 
                        Background="#E6E6FA"
                        Foreground="#333"
                        BorderThickness="0"
                        Padding="8,4"
                        FontWeight="Medium"
                        Click="BackButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>