<Window x:Class="BettingSystemApp.DirectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MAKMERIC | Панель директора" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF">

    <Border BorderBrush="#E0FFF7" BorderThickness="1" CornerRadius="8" Margin="10">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Управление пользователями и ставками" 
                       Foreground="#6A0DAD"
                       FontSize="18"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Контент -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Пользователи:" 
                               Foreground="#6A0DAD"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <DataGrid x:Name="UsersDataGrid"
                              Height="200"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              BorderBrush="#B5EAD7"
                              BorderThickness="1"
                              RowBackground="White"
                              AlternatingRowBackground="#F5F5FF"
                              GridLinesVisibility="Horizontal"
                              Margin="0,0,0,15"/>

                    <TextBlock Text="Ставки пользователей:" 
                               Foreground="#6A0DAD"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <DataGrid x:Name="UserBetsDataGrid"
                              Height="200"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              BorderBrush="#B5EAD7"
                              BorderThickness="1"
                              RowBackground="White"
                              AlternatingRowBackground="#F5F5FF"
                              GridLinesVisibility="Horizontal"
                              Margin="0,0,0,15"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Панель кнопок -->
            <UniformGrid Grid.Row="2" 
                         Rows="1" 
                         Columns="4" 
                         HorizontalAlignment="Center"
                         Margin="0,10,0,0">
                <Button Content="Удалить пользователя"
                        Margin="5"
                        Height="35"
                        Background="#C8A2C8"
                        Foreground="#333"
                        BorderThickness="0"
                        FontWeight="Medium"
                        Click="DeleteUserButton_Click"/>

                <Button Content="Сформировать отчёт"
                        Margin="5"
                        Height="35"
                        Background="#B5EAD7"
                        Foreground="#333"
                        BorderThickness="0"
                        FontWeight="Medium"
                        Click="GenerateReport_Click"/>

                <Button Content="Открыть отчёт"
                        Margin="5"
                        Height="35"
                        Background="#B5EAD7"
                        Foreground="#333"
                        BorderThickness="0"
                        FontWeight="Medium"
                        Click="OpenReportsButton_Click"/>

                <Button Content="Назад"
                        Margin="5"
                        Height="35"
                        Background="#CBC3E3"
                        Foreground="#333"
                        BorderThickness="0"
                        FontWeight="Medium"
                        Click="GoToMainWindow_Click"/>
            </UniformGrid>
        </Grid>
    </Border>
</Window>