<Window x:Class="BettingSystemApp.DirectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Окно директора" Height="450" Width="700"
        Background="#E0FFF7" WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Таблица с пользователями -->
        <DataGrid x:Name="UsersDataGrid"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  Grid.Row="0"
                  Margin="0,0,0,10"
                  RowBackground="White"
                  AlternatingRowBackground="#F5F5F5"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  BorderBrush="#D8BFD8"
                  BorderThickness="1"/>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Удалить пользователя"
                    Width="160" Height="35" Margin="10"
                    Background="#FFB6C1"
                    Click="DeleteUserButton_Click"/>

            <Button Content="Сформировать отчёт"
                    Width="160" Height="35" Margin="10"
                    Background="#98FF98"
                    Click="GenerateReport_Click"/>
            <Button Content="Открыть отчёт" Width="150" Height="35" Margin="10"
        Background="#D8BFD8" Click="OpenReportsButton_Click"/>


            <Button Content="Назад"
                    Width="100" Height="35" Margin="10"
                    Background="#D8BFD8"
                    Click="GoToMainWindow_Click"/>
        </StackPanel>
    </Grid>
</Window>
