<Window x:Class="BettingSystemApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="300" Width="350"
        WindowStartupLocation="CenterScreen"
        Background="#E0FFF7">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Имя пользователя:" Foreground="#6A0DAD" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Пароль:" Foreground="#6A0DAD" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Войти" Width="120" Margin="5" Background="#98FF98" Click="LoginButton_Click"/>
                <Button Content="Назад" Width="80" Margin="5" Background="#D8BFD8" Click="BackButton_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
